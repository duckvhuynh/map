# Environment Variables for Coolify Deployment
# Copy this to Coolify's Environment Variables section

# Application
APP_NAME=vietnam-map-server
APP_DOMAIN=map.duckvhuynh.space
APP_URL=https://map.duckvhuynh.space

# PostgreSQL Database
POSTGRES_DB=mapdb
POSTGRES_USER=mapuser
POSTGRES_PASSWORD=<GENERATE_RANDOM_PASSWORD>
POSTGRES_PORT=5432

# PostgreSQL Performance Tuning
POSTGRES_SHARED_BUFFERS=2GB
POSTGRES_WORK_MEM=256MB
POSTGRES_MAINTENANCE_WORK_MEM=1GB

# Nominatim Configuration
NOMINATIM_THREADS=4

# Redis (Optional)
REDIS_PORT=6379

# Frontend Environment Variables
NODE_ENV=production
NEXT_PUBLIC_TILE_URL=/tiles
NEXT_PUBLIC_ROUTING_URL=/route
NEXT_PUBLIC_GEOCODING_URL=/geocode
