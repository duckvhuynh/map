# Vietnam Map Server - Environment Variables Example
# Copy this file to .env and update the values

# PostgreSQL Configuration
POSTGRES_DB=mapdb
POSTGRES_USER=mapuser
POSTGRES_PASSWORD=changeme_strong_password_here
POSTGRES_PORT=5432

# PostgreSQL Performance Tuning
POSTGRES_SHARED_BUFFERS=2GB
POSTGRES_WORK_MEM=256MB
POSTGRES_MAINTENANCE_WORK_MEM=1GB
POSTGRES_EFFECTIVE_CACHE_SIZE=4GB

# Ports Configuration
NGINX_PORT=80
NGINX_SSL_PORT=443
TILESERVER_PORT=8080
MARTIN_PORT=3001
OSRM_CAR_PORT=5000
OSRM_BIKE_PORT=5001
OSRM_FOOT_PORT=5002
NOMINATIM_PORT=7070
FRONTEND_PORT=3000
REDIS_PORT=6379

# Nominatim Configuration
NOMINATIM_THREADS=4

# Frontend Configuration
NEXT_PUBLIC_TILE_URL=http://localhost:8080
NEXT_PUBLIC_ROUTING_URL=http://localhost:5000
NEXT_PUBLIC_GEOCODING_URL=http://localhost:7070
NEXT_PUBLIC_API_URL=http://localhost

# Map Configuration
DEFAULT_MAP_CENTER_LAT=14.0583
DEFAULT_MAP_CENTER_LNG=108.2772
DEFAULT_MAP_ZOOM=6

# OSM Data
OSM_REGION=vietnam
OSM_DOWNLOAD_URL=https://download.geofabrik.de/asia/vietnam-latest.osm.pbf

# SSL/TLS (for production)
SSL_ENABLED=false
SSL_DOMAIN=yourdomain.com
SSL_EMAIL=your-email@example.com

# Cache Configuration
REDIS_ENABLED=false
CACHE_TTL=3600

# Monitoring
ENABLE_METRICS=false
